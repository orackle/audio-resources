---
import CleanLayout from "../../layouts/CleanLayout.astro";

const title = "DAW Shortcuts Cheat Sheet";
const description = "Essential keyboard shortcuts for popular DAWs";
---

<CleanLayout {title} {description}>
  <main class="cheatsheet-container">
    <div class="back-link">
      <a href="/">‚Üê Back to all cheats</a>
    </div>

    <div class="cheatsheet-header">
      <h1>DAW Shortcuts</h1>
      <div class="cheatsheet-meta">
        <span class="version">v1.0</span>
        <a href="#" class="edit-link">Edit this page</a>
      </div>
    </div>

    <div class="cheatsheet-content">
      <div class="cheatsheet-column">
        <section class="cheatsheet-section">
          <h2>Universal Shortcuts</h2>
          <div class="cheatsheet-table">
            <div class="table-row header">
              <div class="table-cell">Action</div>
              <div class="table-cell">Windows</div>
              <div class="table-cell">Mac</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Play/Stop</div>
              <div class="table-cell">Space</div>
              <div class="table-cell">Space</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Record</div>
              <div class="table-cell">* (Numpad)</div>
              <div class="table-cell">* (Numpad)</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Loop Playback</div>
              <div class="table-cell">Ctrl+L</div>
              <div class="table-cell">Cmd+L</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Toggle Metronome</div>
              <div class="table-cell">C</div>
              <div class="table-cell">C</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Save</div>
              <div class="table-cell">Ctrl+S</div>
              <div class="table-cell">Cmd+S</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Undo</div>
              <div class="table-cell">Ctrl+Z</div>
              <div class="table-cell">Cmd+Z</div>
            </div>
          </div>
        </section>

        <section class="cheatsheet-section">
          <h2>Pro Tools</h2>
          <div class="cheatsheet-table">
            <div class="table-row header">
              <div class="table-cell">Action</div>
              <div class="table-cell">Shortcut</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Separate Clip</div>
              <div class="table-cell">Ctrl+E / Cmd+E</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Fade</div>
              <div class="table-cell">Ctrl+F / Cmd+F</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Zoom to Selection</div>
              <div class="table-cell">Ctrl+[ / Cmd+[</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Show/Hide Mix Window</div>
              <div class="table-cell">Ctrl+= / Cmd+=</div>
            </div>
          </div>
        </section>
      </div>

      <div class="cheatsheet-column">
        <section class="cheatsheet-section">
          <h2>Ableton Live</h2>
          <div class="cheatsheet-table">
            <div class="table-row header">
              <div class="table-cell">Action</div>
              <div class="table-cell">Shortcut</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Split at Playhead</div>
              <div class="table-cell">Ctrl+E / Cmd+E</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Duplicate</div>
              <div class="table-cell">Ctrl+D / Cmd+D</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Toggle Metronome</div>
              <div class="table-cell">Ctrl+Shift+M / Cmd+Shift+M</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Show/Hide Browser</div>
              <div class="table-cell">Ctrl+Alt+B / Cmd+Opt+B</div>
            </div>
          </div>
        </section>

        <section class="cheatsheet-section">
          <h2>FL Studio</h2>
          <div class="cheatsheet-table">
            <div class="table-row header">
              <div class="table-cell">Action</div>
              <div class="table-cell">Shortcut</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Piano Roll</div>
              <div class="table-cell">F7</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Mixer</div>
              <div class="table-cell">F9</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Playlist</div>
              <div class="table-cell">F5</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Channel Rack</div>
              <div class="table-cell">F6</div>
            </div>
          </div>
        </section>

        <section class="cheatsheet-section">
          <h2>Logic Pro</h2>
          <div class="cheatsheet-table">
            <div class="table-row header">
              <div class="table-cell">Action</div>
              <div class="table-cell">Shortcut</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Split at Playhead</div>
              <div class="table-cell">Cmd+T</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Merge Regions</div>
              <div class="table-cell">Cmd+J</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Show/Hide Mixer</div>
              <div class="table-cell">Cmd+2</div>
            </div>
            <div class="table-row">
              <div class="table-cell">Bounce in Place</div>
              <div class="table-cell">Ctrl+B</div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </main>

  <style>
    /* Reusing the same styles as previous cheatsheets */
    :root {
      --primary: #6B4E3B;
      --primary-dark: #4A3A2B;
      --accent: #9C6B3D;
      --text: #3A2E25;
      --text-light: #6B5A4A;
      --border: #B8A58E;
      --bg: #F0E6D8;
      --code-bg: #E0D4C3;
      --radius: 4px;
      --shadow: 0 2px 6px rgba(44, 36, 28, 0.08);
      --font-mono: 'Space Mono', 'Fira Code', 'SFMono-Regular', Consolas, monospace;
    }

    .cheatsheet-container { width: 100%; margin: 0; padding: 0.5em 9em; min-height: 100vh; position: relative; }
    .back-link { margin-bottom: 3rem; margin-left: 0; margin-right: 0; }
    .back-link a { color: var(--text-light); font-size: 0.9rem; text-decoration: none; transition: color 0.2s ease; }
    .back-link a:hover { color: var(--accent); }
    .cheatsheet-header { margin-bottom: 2.5rem; padding-bottom: 1rem; border-bottom: 1px solid var(--border); }
    .cheatsheet-header h1 { font-size: 2.2rem; font-weight: 700; color: var(--text); margin: 0 0 0.5rem 0; }
    .cheatsheet-meta { display: flex; align-items: center; gap: 1rem; color: var(--text-light); font-size: 0.95rem; }
    .version { background: var(--code-bg); padding: 0.2rem 0.5rem; border-radius: var(--radius); font-family: var(--font-mono); font-size: 0.85em; }
    .edit-link { color: var(--primary); text-decoration: none; }
    .edit-link:hover { text-decoration: underline; }
    .cheatsheet-content { display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: start; width: 100%; padding: 2rem 1.5rem; max-width: 1800px; margin: 0 auto; }
    .cheatsheet-section { margin-bottom: 3rem; }
    .cheatsheet-section:last-child { margin-bottom: 0; }
    .cheatsheet-section h2 { font-size: 1.5rem; font-weight: 600; margin: 0 0 1.5rem 0; padding-bottom: 0.5rem; border-bottom: 2px solid var(--primary); color: var(--text); display: inline-block; }
    .cheatsheet-table { width: 100%; border-collapse: separate; border-spacing: 0; margin-bottom: 2rem; background: var(--bg); border-radius: var(--radius); overflow: hidden; box-shadow: var(--shadow); }
    .table-row { display: flex; border-bottom: 1px solid var(--border); }
    .table-row:last-child { border-bottom: none; }
    .table-row.header { font-weight: 600; background: transparent; }
    .table-cell { padding: 1.25rem 0 1.25rem 1.5rem; text-align: left; flex: 1; color: var(--text); font-size: 0.95rem; }
    .table-cell:first-child { flex: 0 0 200px; font-family: 'Space Grotesk', monospace; color: var(--accent); font-weight: 500; font-size: 0.95rem; }
    .cheatsheet-list li { margin-bottom: 1.25rem; margin-left: 0; margin-right: 0; line-height: 1.7; color: var(--text); font-size: 0.95rem; }
    .instrument-grid { display: grid; grid-template-columns: 1fr; gap: 1.5rem; }
    .instrument-card { background: var(--bg); border-radius: var(--radius); border: 1px solid var(--border); padding: 1.5rem; transition: transform 0.2s, box-shadow 0.2s; }
    .instrument-card:hover { transform: translateY(-2px); box-shadow: var(--shadow); }
    .instrument-card h3 { margin: 0 0 1rem 0; color: var(--primary); font-size: 1.2rem; }
    .instrument-card ul { margin: 0; padding: 0 0 0 1.2rem; }
    .instrument-card li { margin-bottom: 0.5rem; line-height: 1.5; }
    .instrument-card li:last-child { margin-bottom: 0; }
    .cheatsheet-tips { display: grid; gap: 1.5rem; }
    .tip { background: var(--bg); border-radius: var(--radius); padding: 1.5rem; border: 1px solid var(--border); }
    .tip h4 { margin: 0 0 0.75rem 0; color: var(--primary); font-size: 1.1rem; }
    .tip p { margin: 0 0 0.5rem 0; color: var(--text); line-height: 1.6; }
    .tip-detail { font-size: 0.9em; color: var(--text-light); font-style: italic; margin-top: 0.5rem; padding-top: 0.5rem; border-top: 1px dashed var(--border); }

    @media (max-width: 1200px) {
      .cheatsheet-content { grid-template-columns: 1fr; padding: 1rem 0.5rem; }
    }

    @media (max-width: 768px) {
      .cheatsheet-container { padding: 0.5em 1em; }
      .table-row { flex-direction: column; padding: 1rem; }
      .table-cell { padding: 0.5rem 0; }
      .table-cell:first-child { flex: 1; font-weight: 600; padding-bottom: 0.25rem; }
      .cheatsheet-section h2 { font-size: 1.3rem; }
      .cheatsheet-header h1 { font-size: 1.8rem; }
    }

    @media (max-width: 480px) {
      .cheatsheet-header h1 { font-size: 1.6rem; }
      .cheatsheet-meta { flex-direction: column; align-items: flex-start; gap: 0.5rem; }
      .table-cell:first-child { flex: 0 0 100px; }
    }
  </style>
</CleanLayout>
