---
import CleanLayout from "../layouts/CleanLayout.astro";

const title = "Audio Cheat Sheets";
const description = "Quick references for audio engineers & musicians";
---

<CleanLayout {title} {description}>
  <main class="container">
    <header class="page-header">
      <h1>Audio Cheat Sheets</h1>
      <p class="page-description">Essential references for audio production and music theory</p>
    </header>

    <div class="cheat-grid">
      <section class="cheat-category">
        <h2>Audio Processing</h2>
        <ul class="cheat-list">
          <li>
            <a href="/audio/eq" class="cheat-link">
              <span class="cheat-title">EQ Cheat Sheet</span>
              <span class="cheat-desc">Frequency ranges and EQ tips</span>
            </a>
          </li>
          <li>
            <a href="/audio/compression" class="cheat-link">
              <span class="cheat-title">Compression Guide</span>
              <span class="cheat-desc">Techniques for dynamic control</span>
            </a>
          </li>
          <li>
            <a href="/audio/reverb" class="cheat-link">
              <span class="cheat-title">Reverb Settings</span>
              <span class="cheat-desc">Optimal times by genre</span>
            </a>
          </li>
          <li>
            <a href="/audio/delay" class="cheat-link">
              <span class="cheat-title">Delay Times</span>
              <span class="cheat-desc">Musical timing references</span>
            </a>
          </li>
        </ul>
      </section>

      <section class="cheat-category">
        <h2>Music Theory</h2>
        <ul class="cheat-list">
          <li>
            <a href="/music-theory/scales" class="cheat-link">
              <span class="cheat-title">Scales Reference</span>
              <span class="cheat-desc">Major, minor, and modal patterns</span>
            </a>
          </li>
          <li>
            <a href="/music-theory/chord-progressions" class="cheat-link">
              <span class="cheat-title">Chord Progressions</span>
              <span class="cheat-desc">Common progressions in all keys</span>
            </a>
          </li>
          <li>
            <a href="/music-theory/keys" class="cheat-link">
              <span class="cheat-title">Key Signatures</span>
              <span class="cheat-desc">Circle of fifths reference</span>
            </a>
          </li>
          <li>
            <a href="/music-theory/modes" class="cheat-link">
              <span class="cheat-title">Modes</span>
              <span class="cheat-desc">Understanding modal theory</span>
            </a>
          </li>
        </ul>
      </section>

      <section class="cheat-category">
        <h2>DAW Shortcuts</h2>
        <ul class="cheat-list">
          <li>
            <a href="/daw/shortcuts/ableton" class="cheat-link">
              <span class="cheat-title">Ableton Live</span>
              <span class="cheat-desc">Essential keyboard shortcuts</span>
            </a>
          </li>
          <li>
            <a href="/daw/shortcuts/logic" class="cheat-link">
              <span class="cheat-title">Logic Pro</span>
              <span class="cheat-desc">Workflow accelerators</span>
            </a>
          </li>
          <li>
            <a href="/daw/shortcuts/pro-tools" class="cheat-link">
              <span class="cheat-title">Pro Tools</span>
              <span class="cheat-desc">Professional workflow tips</span>
            </a>
          </li>
          <li>
            <a href="/daw/shortcuts/fl-studio" class="cheat-link">
              <span class="cheat-title">FL Studio</span>
              <span class="cheat-desc">Beat making shortcuts</span>
            </a>
          </li>
        </ul>
      </section>

      <section class="cheat-category">
        <h2>Audio Plugins</h2>
        <ul class="cheat-list">
          <li>
            <a href="/plugins/compression" class="cheat-link">
              <span class="cheat-title">Compression</span>
              <span class="cheat-desc">Best settings by instrument</span>
            </a>
          </li>
          <li>
            <a href="/plugins/eq" class="cheat-link">
              <span class="cheat-title">EQ Matching</span>
              <span class="cheat-desc">Professional EQ curves</span>
            </a>
          </li>
          <li>
            <a href="/plugins/reverb" class="cheat-link">
              <span class="cheat-title">Reverb Types</span>
              <span class="cheat-desc">When to use each reverb</span>
            </a>
          </li>
          <li>
            <a href="/plugins/saturation" class="cheat-link">
              <span class="cheat-title">Saturation</span>
              <span class="cheat-desc">Warmth and harmonics guide</span>
            </a>
          </li>
        </ul>
      </section>

      <section class="cheat-category">
        <h2>Recording</h2>
        <ul class="cheat-list">
          <li>
            <a href="/recording/vocals" class="cheat-link">
              <span class="cheat-title">Vocal Recording</span>
              <span class="cheat-desc">Mic placement and techniques</span>
            </a>
          </li>
          <li>
            <a href="/recording/guitar" class="cheat-link">
              <span class="cheat-title">Guitar Miking</span>
              <span class="cheat-desc">Cabinet and amp techniques</span>
            </a>
          </li>
          <li>
            <a href="/recording/drums" class="cheat-link">
              <span class="cheat-title">Drum Miking</span>
