---
import CleanLayout from "../../layouts/CleanLayout.astro";

const title = "Chord Progressions";
const description = "Essential chord progressions for songwriting and composition";
---

<CleanLayout {title} {description}>
  <main class="cheatsheet-container">
    <div class="back-link">
      <a href="/">← Back to all cheats</a>
    </div>

    <div class="cheatsheet-header">
      <h1>Chord Progressions</h1>
      <div class="cheatsheet-meta">
        <span class="version">v1.0</span>
        <a href="#" class="edit-link">Edit this page</a>
      </div>
    </div>

    <div class="cheatsheet-content">
      <div class="cheatsheet-column">
        <section class="cheatsheet-section">
          <h2>Common Progressions</h2>
          <div class="cheatsheet-table">
            <div class="table-row header">
              <div class="table-cell">Progression</div>
              <div class="table-cell">Example in C</div>
              <div class="table-cell">Common Use</div>
            </div>
            <div class="table-row">
              <div class="table-cell">I - V - vi - IV</div>
              <div class="table-cell">C - G - Am - F</div>
              <div class="table-cell">Pop, Rock, Ballads</div>
            </div>
            <div class="table-row">
              <div class="table-cell">I - IV - V</div>
              <div class="table-cell">C - F - G</div>
              <div class="table-cell">Blues, Rock, Country</div>
            </div>
            <div class="table-row">
              <div class="table-cell">vi - IV - I - V</div>
              <div class="table-cell">Am - F - C - G</div>
              <div class="table-cell">Pop, Rock Ballads</div>
            </div>
            <div class="table-row">
              <div class="table-cell">I - V - vi - iii - IV</div>
              <div class="table-cell">C - G - Am - Em - F</div>
              <div class="table-cell">Pop, Singer-Songwriter</div>
            </div>
            <div class="table-row">
              <div class="table-cell">I - vi - IV - V</div>
              <div class="table-cell">C - Am - F - G</div>
              <div class="table-cell">Doo-wop, 50s</div>
            </div>
            <div class="table-row">
              <div class="table-cell">ii - V - I</div>
              <div class="table-cell">Dm7 - G7 - Cmaj7</div>
              <div class="table-cell">Jazz, Standards</div>
            </div>
          </div>
        </section>

        <section class="cheatsheet-section">
          <h2>Minor Key Progressions</h2>
          <div class="cheatsheet-table">
            <div class="table-row header">
              <div class="table-cell">Progression</div>
              <div class="table-cell">Example in A Minor</div>
              <div class="table-cell">Characteristics</div>
            </div>
            <div class="table-row">
              <div class="table-cell">i - iv - v</div>
              <div class="table-cell">Am - Dm - Em</div>
              <div class="table-cell">Natural minor sound</div>
            </div>
            <div class="table-row">
              <div class="table-cell">i - VI - III - VII</div>
              <div class="table-cell">Am - F - C - G</div>
              <div class="table-cell">Pop/Rock minor</div>
            </div>
            <div class="table-row">
              <div class="table-cell">i - VII - VI - V</div>
              <div class="table-cell">Am - G - F - E</div>
              <div class="table-cell">Andalusian cadence</div>
            </div>
            <div class="table-row">
              <div class="table-cell">i - iv - V7</div>
              <div class="table-cell">Am - Dm - E7</div>
              <div class="table-cell">Harmonic minor sound</div>
            </div>
          </div>
        </section>
      </div>

      <div class="cheatsheet-column">
        <section class="cheatsheet-section">
          <h2>Jazz Progressions</h2>
          <div class="cheatsheet-table">
            <div class="table-row header">
              <div class="table-cell">Progression</div>
              <div class="table-cell">Example in C</div>
              <div class="table-cell">Description</div>
            </div>
            <div class="table-row">
              <div class="table-cell">ii - V - I</div>
              <div class="table-cell">Dm7 - G7 - Cmaj7</div>
              <div class="table-cell">Basic jazz cadence</div>
            </div>
            <div class="table-row">
              <div class="table-cell">I - vi - ii - V</div>
              <div class="table-cell">Cmaj7 - Am7 - Dm7 - G7</div>
              <div class="table-cell">Rhythm changes bridge</div>
            </div>
            <div class="table-row">
              <div class="table-cell">iii - VI - ii - V - I</div>
              <div class="table-cell">Em7 - A7 - Dm7 - G7 - Cmaj7</div>
              <div class="table-cell">Jazz turnaround</div>
            </div>
            <div class="table-row">
              <div class="table-cell">I - V/ii - ii - V</div>
              <div class="table-cell">Cmaj7 - A7 - Dm7 - G7</div>
              <div class="table-cell">Secondary dominant</div>
            </div>
          </div>
        </section>

        <section class="cheatsheet-section">
          <h2>Chord Substitutions</h2>
          <div class="cheatsheet-tips">
            <div class="tip">
              <h4>Tritone Substitution</h4>
              <p>Replace V7 with ♭II7 (e.g., G7 → D♭7)</p>
              <p class="tip-detail">Creates chromatic bass movement</p>
            </div>
            <div class="tip">
              <h4>Secondary Dominant</h4>
              <p>Add V7 before any chord (e.g., I - V7/ii - ii - V - I)</p>
              <p class="tip-detail">Adds tension and resolution</p>
            </div>
            <div class="tip">
              <h4>Backdoor Progression</h4>
              <p>Replace V7 with ♭VII7 (e.g., G7 → B♭7)</p>
              <p class="tip-detail">Smoother resolution to I</p>
            </div>
            <div class="tip">
              <h4>Diminished Passing Chords</h4>
              <p>Add dim7 chord a half-step below target</p>
              <p class="tip-detail">Creates smooth voice leading</p>
            </div>
          </div>
        </section>
      </div>
    </div>
  </main>

  <style>
    :root {
      --primary: #6B4E3B;
      --primary-dark: #4A3A2B;
      --accent: #9C6B3D;
      --text: #3A2E25;
      --text-light: #6B5A4A;
      --border: #B8A58E;
      --bg: #F0E6D8;
      --code-bg: #E0D4C3;
      --radius: 4px;
      --shadow: 0 2px 6px rgba(44, 36, 28, 0.08);
      --font-mono: 'Space Mono', 'Fira Code', 'SFMono-Regular', Consolas, monospace;
    }

    .cheatsheet-container { width: 100%; margin: 0; padding: 0.5em 9em; min-height: 100vh; position: relative; }
    .back-link { margin-bottom: 3rem; margin-left: 0; margin-right: 0; }
    .back-link a { color: var(--text-light); font-size: 0.9rem; text-decoration: none; transition: color 0.2s ease; }
    .back-link a:hover { color: var(--accent); }
    .cheatsheet-header { margin-bottom: 2.5rem; padding-bottom: 1rem; border-bottom: 1px solid var(--border); }
    .cheatsheet-header h1 { font-size: 2.2rem; font-weight: 700; color: var(--text); margin: 0 0 0.5rem 0; }
    .cheatsheet-meta { display: flex; align-items: center; gap: 1rem; color: var(--text-light); font-size: 0.95rem; }
    .version { background: var(--code-bg); padding: 0.2rem 0.5rem; border-radius: var(--radius); font-family: var(--font-mono); font-size: 0.85em; }
    .edit-link { color: var(--primary); text-decoration: none; }
    .edit-link:hover { text-decoration: underline; }
    .cheatsheet-content { display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: start; width: 100%; padding: 2rem 1.5rem; max-width: 1800px; margin: 0 auto; }
    .cheatsheet-section { margin-bottom: 3rem; }
    .cheatsheet-section:last-child { margin-bottom: 0; }
    .cheatsheet-section h2 { font-size: 1.5rem; font-weight: 600; margin: 0 0 1.5rem 0; padding-bottom: 0.5rem; border-bottom: 2px solid var(--primary); color: var(--text); display: inline-block; }
    .cheatsheet-table { width: 100%; border-collapse: separate; border-spacing: 0; margin-bottom: 2rem; background: var(--bg); border-radius: var(--radius); overflow: hidden; box-shadow: var(--shadow); }
    .table-row { display: flex; border-bottom: 1px solid var(--border); }
    .table-row:last-child { border-bottom: none; }
    .table-row.header { font-weight: 600; background: transparent; }
    .table-cell { padding: 1.25rem 1.5rem; text-align: left; flex: 1; color: var(--text); font-size: 0.95rem; }
    .table-cell:first-child { flex: 0 0 180px; font-family: 'Space Grotesk', monospace; color: var(--accent); font-weight: 500; font-size: 0.95rem; }
    .cheatsheet-tips { display: grid; gap: 1.5rem; }
    .tip { background: var(--bg); border-radius: var(--radius); padding: 1.5rem; border: 1px solid var(--border); }
    .tip h4 { margin: 0 0 0.75rem 0; color: var(--primary); font-size: 1.1rem; }
    .tip p { margin: 0 0 0.5rem 0; color: var(--text); line-height: 1.6; }
    .tip-detail { font-size: 0.9em; color: var(--text-light); font-style: italic; margin-top: 0.5rem; padding-top: 0.5rem; border-top: 1px dashed var(--border); }

    @media (max-width: 1200px) {
      .cheatsheet-content { grid-template-columns: 1fr; padding: 1rem 0.5rem; }
    }

    @media (max-width: 768px) {
      .cheatsheet-container { padding: 0.5em 1em; }
      .table-row { flex-direction: column; padding: 1rem; }
      .table-cell { padding: 0.5rem 0; }
      .table-cell:first-child { flex: 1; font-weight: 600; padding-bottom: 0.25rem; }
      .cheatsheet-section h2 { font-size: 1.3rem; }
      .cheatsheet-header h1 { font-size: 1.8rem; }
    }

    @media (max-width: 480px) {
      .cheatsheet-header h1 { font-size: 1.6rem; }
      .cheatsheet-meta { flex-direction: column; align-items: flex-start; gap: 0.5rem; }
    }
  </style>
</CleanLayout>
