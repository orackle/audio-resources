    font-weight: 600;
    color: var(--text);
    position: relative;
    padding-bottom: 0.5rem;
  }
  
  h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 3px;
    background: var(--accent);
    border-radius: 3px;
  }
  
  .back-link {
    margin-bottom: 1.5rem;
  }
  
