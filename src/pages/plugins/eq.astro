    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s ease;
  }
  
  .back-link a:hover {
    color: var(--accent);
  }
  
  .intro {
    background: var(--surface);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 1.5rem 0;
    border: 1px solid var(--border);
  }
  
  .intro-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .intro p {
    margin: 0 0 1rem 0;
    line-height: 1.6;
  }
  
  .tip {
    background: rgba(99, 102, 241, 0.1);
    border-left: 3px solid var(--accent);
    padding: 0.75rem 1rem;
    border-radius: 0 4px 4px 0;
    font-size: 0.9rem;
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
  }
  
