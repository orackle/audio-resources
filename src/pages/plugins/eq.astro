    color: var(--accent);
  }

  h1 {
    margin-top: 1rem;
    margin-bottom: 2rem;
  }

  .cheat-section {
    margin-bottom: 3rem;
  }

  .cheat-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .intro {
    background: var(--surface-2);
    border-radius: 8px;
